{
  "name": "sunday",
  "version": "0.0.1",
  "author": "luodexun <lll279906908@outlook.com>",
  "description": "An interesting project",
  "license": null,
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "node webpack/build.js && electron-builder -mw -p always",
    "build:dir": "node webpack/build.js && electron-builder --dir",
    "clean": "cross-env BUILD_TARGET=clean node webpack/build.js",
    "web": "cross-env BUILD_TARGET=web node webpack/build.js",
    "dev": "node webpack/dev-runner.js",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src",
    "lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src",
    "pack": "npm run pack:main && npm run pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config webpack/webpack.main.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --config webpack/webpack.prod.js",
    "icon": "electron-icon-builder --input=./src/renderer/assets/icon.png --output=./build",
    "postinstall": "npm run lint:fix"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/luodexun/sunday.git"
  },
  "build": {
    "productName": "sunday",
    "appId": "com.letmexiu.ldx",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/electron/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./build/icons/win/icon.ico",
      "uninstallerIcon": "./build/icons/win/icon.ico",
      "installerHeaderIcon": "./build/icons/win/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "sunday"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "build/icons/mac/icon.icns",
      "target": [
        {
          "target": "default",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "build/icons/win/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/icons"
    },
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "luodexun",
        "repo": "sunday",
        "private": false,
        "releaseType": "release"
      }
    ]
  },
  "dependencies": {
    "@babel/runtime": "^7.18.3",
    "axios": "^0.18.0",
    "core-js": "^3.23.2",
    "electron-store": "^8.0.2",
    "electron-updater": "^5.0.5",
    "element-ui": "^2.15.9",
    "mysql": "^2.18.1",
    "vue": "^2.5.16",
    "vue-router": "^3.0.1",
    "vuedraggable": "^2.24.3"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/plugin-transform-runtime": "^7.18.5",
    "@babel/preset-env": "^7.18.2",
    "ajv": "^6.5.0",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^8.2.5",
    "babel-minify-webpack-plugin": "^0.3.1",
    "babel-plugin-component": "^1.1.1",
    "babel-register": "^6.26.0",
    "cfonts": "^2.1.2",
    "chalk": "^2.4.1",
    "clean-webpack-plugin": "^4.0.0",
    "compression-webpack-plugin": "^10.0.0",
    "copy-webpack-plugin": "^4.6.0",
    "cross-env": "^5.1.6",
    "css-loader": "^0.28.11",
    "css-minimizer-webpack-plugin": "^4.0.0",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "dotenv": "^16.0.1",
    "electron": "^15.3.0",
    "electron-builder": "^23.1.0",
    "electron-debug": "^1.5.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-icon-builder": "^2.0.1",
    "electron-log": "^4.4.8",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "express": "^4.18.1",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^5.5.0",
    "js-conditional-compile-loader": "^1.0.16",
    "listr": "^0.14.3",
    "loadsh": "^0.0.4",
    "mini-css-extract-plugin": "^2.6.1",
    "multispinner": "^0.2.1",
    "node-loader": "^0.6.0",
    "sass": "^1.53.0",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "svg-sprite-loader": "^6.0.11",
    "svgo-loader": "^3.0.1",
    "terser-webpack-plugin": "^5.3.3",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^15.9.6",
    "vue-loader-plugin": "^1.3.0",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^5.73.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-middleware": "^5.3.3",
    "webpack-hot-middleware": "^2.25.1",
    "webpack-merge": "^5.8.0",
    "webpackbar": "^5.0.2"
  }
}
